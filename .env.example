# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key
SUPABASE_ACCESS_TOKEN=              # personal access token (for MCP only, optional)

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.5-flash       # model to use

# RTMP Stream
RTMP_URL=rtmp://your-camera-ip/live/stream

# Worker Settings
FRAME_INTERVAL=2          # seconds between frame extraction
MOTION_THRESHOLD=500      # minimum non-zero pixels to trigger
MOTION_COOLDOWN=30        # seconds between Gemini calls
IDLE_TIMEOUT=60           # seconds of no activity to end feeding session
REFS_DIR=data/refs        # directory with reference photos

# Lark (Feishu) Notifications
LARK_WEBHOOK_URL=         # leave empty to disable notifications
