# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key

# RTMP Stream
RTMP_URL=rtmp://your-camera-ip/live/stream

# Worker Settings
FRAME_INTERVAL=2          # seconds between frame extraction
MOTION_THRESHOLD=500      # minimum non-zero pixels to trigger
MOTION_COOLDOWN=30        # seconds between Gemini calls
IDLE_TIMEOUT=120          # seconds of no motion to end feeding event

# Lark (Feishu) Notifications
LARK_WEBHOOK_URL=         # leave empty to disable notifications
